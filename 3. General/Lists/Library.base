properties:
  note.LibraryAuthor:
    displayName: Author
  note.LibraryStatus:
    displayName: Status
views:
  - type: cards
    name: View
    filters:
      and:
        - "!LibraryTitle.isEmpty()"
        - LibraryStatus != "Planning"
    order:
      - LibraryTitle
      - LibraryAuthor
      - LibraryStatus
    sort:
      - property: LibraryStatus
        direction: DESC
    cardSize: 160
    image: note.LibraryCover
    imageAspectRatio: 1.05
